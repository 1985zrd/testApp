<a href="artical?_id=<%=obj._id %>" class="item left">
	<div class="img">
		<img src="<%=obj.imgLink %>" alt="照片">
	</div>
	<div class="info">
		<p class="title"><%=obj.title %></p>
		<p class="author"><span><%-String(obj.author).replace(/(\d{3})\d{4}(\d{4})/,"$1****$2") %></span><span>发表于<%=obj.createTime.toLocaleDateString() %></span><span>更新于<%=obj.updateTime.toLocaleDateString() %></span></p>
		<div class="statistics clear">
			<p class="left"><%= obj.viewNum %>览</p>
			<p class="left"><%= obj.commentsNum %>评</p>
			<p class="left"><%= obj.forwardNum %>转</p>
		</div>
	</div>
</a>